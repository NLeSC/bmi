<project name="BMI" default="build" basedir=".">
	<description>
        Build file for BMI API
    </description>

	<target name="build" depends="clean, create-dist" description="Main build target" />

	<target name="create-dist" description="compile the source">
		<mkdir dir="dist" />
		<mkdir dir="build/classes" />

		<!-- Compile the java code from src into classes -->
		<javac srcdir="src" destdir="build/classes" debug="on"/>

		<!-- Put all compiled classes into a jar file in the lib dir -->
		<jar jarfile="dist/bmi.jar" basedir="build/classes" />


		<!-- Zip the source and put it in doc -->
		<zip destfile="dist/bmi-src.zip" basedir="src" />
	</target>

	<target name="clean" description="clean up">
		<delete dir="build" />
		<delete dir="dist" />
	</target>


</project>